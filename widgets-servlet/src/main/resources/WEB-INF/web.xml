<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <servlet>
        <servlet-name>FirstServlet2</servlet-name>
        <servlet-class>com.brew.home.prework.FirstServlet2</servlet-class>
        <load-on-startup>3</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>FirstServlet2</servlet-name>
        <url-pattern>/test2</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>RepeatServletTest1</servlet-name>
        <servlet-class>com.brew.home.prework.repeat.RepeatServletTest1</servlet-class>
        <load-on-startup>3</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>RepeatServletTest1</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RepeatServletTest2</servlet-name>
        <servlet-class>com.brew.home.prework.repeat.RepeatServletTest1</servlet-class>
        <load-on-startup>4</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>RepeatServletTest2</servlet-name>
        <url-pattern>/api/view/index/*</url-pattern>
    </servlet-mapping>


</web-app>